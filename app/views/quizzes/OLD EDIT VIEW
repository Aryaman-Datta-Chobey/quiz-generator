<div>
    <%= button_to "Add Question", '#', id: 'add-question', class: 'button' %>
  </div>

<script>
    document.addEventListener("turbo:load", () => {
      const addQuestionButton = document.getElementById("add-question");
      const questionsDiv = document.getElementById("questions");
    
      if (addQuestionButton && questionsDiv) {
        addQuestionButton.addEventListener("click", (e) => {
          e.preventDefault();
          const newId = new Date().getTime(); // Unique identifier
          const template = document.querySelector("#question-template").innerHTML.replace(/NEW_RECORD/g, newId);
          questionsDiv.insertAdjacentHTML("beforeend", template);
        });
      }
    });
    </script>