<div class="container">

  <div class="row">
    <h1> What quiz would you like to take?</h1>
  </div>

  <div class="row">
    <div class="row">
    <%= form_with url: quizzes_path, method: :get do |form| %>
      <%= form.label :query, "Search for: " %>
      <%= form.text_field :query %>
      <%= form.submit "Find Quiz" %>
    <% end %>
  </div>
  
  <div class="row row-cols-4">
    <% @quizzes.each_with_index do |quiz| %>
      <div class="col">
        <div class="card mb-1 p-2 h-100">
          <div class="card-body">
            <h5 class="card-title"><%= link_to quiz.topic, quiz %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-2">
      <%= link_to "Generate New Quiz", new_quiz_path, class: "btn btn-info" %>
    </div>
  </div>

</div>
