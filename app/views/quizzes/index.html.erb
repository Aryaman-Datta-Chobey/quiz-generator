<div class="container my-5">
  <% if user_signed_in? %>
      <div class="row mb-4">
        <div class="col text-center">
          <h1 class="display-4 text-primary">What Quiz Would You Like to Take?</h1>
        </div>
      </div>

      <div class="row justify-content-center mb-5">
        <div class="col-md-6">
          <%= form_with url: quizzes_path, method: :get, class: "input-group" do |form| %>
            <%= form.label :query, "Search for:", class: "input-group-text bg-info text-white" %>
            <%= form.text_field :query, class: "form-control" %>
            <%= form.submit "Find Quiz", class: "btn btn-info" %>
          <% end %>
        </div>
      </div>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        <% current_user.quizzes.each_with_index do |quiz| %>
          <div class="col">
            <div class="card shadow h-100 border-info quiz-card">
              <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title text-center text-dark font-weight-bold">
                  <%= link_to quiz.topic, quiz, class: "stretched-link text-decoration-none" %>
                </h5>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="row mt-5">
        <div class="col text-center">
          <%= link_to "Generate New Quiz", new_quiz_path, class: "btn btn-lg btn-outline-info" %>
        </div>
      </div>
  <% else %>
        <div class="row mb-4">
        <div class="col text-center">
          <h1 class="display-4 text-primary">Login to get started</h1> <!--Maybe we want to add some slide show of example features when no user is logged in-->
        </div>
      </div>
  <% end %>
</div>


<%# TODO: LINK STYLE SHEET %>
<style>
  .quiz-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
  }

  .quiz-card:hover {
    transform: scale(1.05);
    box-shadow: 0px 4px 12px rgba(0, 123, 255, 0.2);
    border-color: #007bff;
  }

  .quiz-card:active {
    transform: scale(0.98);
  }

  .quiz-card h5 a {
    color: inherit;
    text-decoration: none;
  }

  .quiz-card h5 a:hover,
  .quiz-card h5 a:focus,
  .quiz-card h5 a:active {
    color: #0056b3;
    text-decoration: none;
  }
</style>
