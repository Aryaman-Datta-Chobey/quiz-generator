<head>
<meta name="turbo-refresh-method" content="morph">
<meta name="turbo-refresh-scroll" content="preserve">
</head>
<div class="container py-5" data-controller="quiz-editor">
  <!-- Section 1: Quiz Properties -->
  <%= form_with(model: @quiz, local: true, data: { turbo: false, quiz_id: @quiz.id }) do |quiz_form| %>
    <div>
    <button 
          data-action="click->quiz-editor#toggleQuizProperties" 
          id="toggle-quiz-properties" 
          class="btn btn-link p-0" 
          type="button">
          Edit Quiz Properties
    </button>
    <div id="quiz-properties-container" data-quiz-editor-target="quizProperties" class="collapsed">
        <!-- Quiz Topic -->
        <div class="form-group mb-3">
          <%= quiz_form.label :topic, class: "form-label fw-bold" %>
          <%= quiz_form.text_field :topic, class: 'form-control' %>
        </div>

        <!-- Quiz Difficulty -->
        <div class="form-group mb-3">
          <%= quiz_form.label :difficulty, class: "form-label fw-bold" %>
          <%= quiz_form.select :difficulty, Quiz.difficulties.keys.map { |w| [w.humanize, w] }, { include_blank: true }, class: 'form-control' %>
        </div>

        <!-- Study Duration -->
        <div class="form-group mb-3">
          <%= quiz_form.label :study_duration, "Study Duration (in minutes)", class: "form-label fw-bold" %>
          <%= quiz_form.number_field :study_duration, class: 'form-control', min: 1 %>
        </div>

        <!-- Detail Level -->
        <div class="form-group mb-3">
          <%= quiz_form.label :detail_level, class: "form-label fw-bold" %>
          <%= quiz_form.select :detail_level, Quiz.detail_levels.keys.map { |w| [w.humanize, w] }, { include_blank: true }, class: 'form-control' %>
        </div>
        <%= quiz_form.submit "Save Quiz details" %>
      </div>
    <% end %>
    </div>
    <!-- Section 2: Quiz Questions Properties -->
    <h3>Questions</h3>
    <div id="questions">
      <turbo-frame id="questions_list">
      <%= form_with(model: @quiz, local: true, data: { turbo: false, quiz_id: @quiz.id }) do |quiz_form| %>
        <%= quiz_form.fields_for :questions do |question_form| %>
          <%= render 'question_form', question_form: question_form %> <!-- Render partial for each question -->
        <% end %>
        <%= quiz_form.submit "Save Quiz Questions" %>
        <% end %>
      </turbo-frame>
    </div>
</div>

  <!-- Section 3: Adding a Question to the Quiz--> 
  <turbo-frame id="new_question_form">
  <%= form_with model: [@quiz, @quiz.questions.build], local: true do |question_form| %>
    <%= render 'question_form', question_form: question_form %> <!-- Render partial for new question -->
    <%= question_form.submit "Add Question", class: 'btn btn-primary' %>
  <% end %>
  </turbo-frame>
</div>
<!-- Additional Styling -->
<style>
  .form-control {
    font-size: 1rem;
    border-radius: 5px;
  }
  .collapsed {
    display: none;
  }
  .btn-primary {
    padding: 0.8rem 2rem;
    font-size: 1.2rem;
  }
  .btn-secondary {
    font-size: 1rem;
    padding: 0.6rem 1.8rem;
  }
  .question-fields {
    background-color: #f9f9f9;
    border-radius: 10px;
  }
  h3 {
    margin-top: 1.5rem;
    font-weight: bold;
  }
  .card {
    border: none;
    border-radius: 10px;
  }
  .shadow-sm {
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  }
  .answer-card {
    cursor: pointer;
    transition: all 0.3s ease-in-out;
  }
  .answer-card:hover {
    background-color: #f1f1f1;
  }
  .answer-card.selected {
    border: 2px solid #28a745;
    background-color: #e6ffe6;
    box-shadow: 0px 0px 12px #28a745;
    transition: all 0.1s ease-in-out;
  }
  .d-none {
    display: none !important;
  }
  .correct-answer {
    display: none !important;
  }
</style>